{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "utilities": ["./utilities/*.ts"],
      "migrations": ["./migrations/*.ts"],
      "controllers": ["./controllers/*.ts"],
      "entities": ["./entities/*.ts"],
      "routes": ["./routes/*.ts"]
    }
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "**/*.spec.ts"]
}
